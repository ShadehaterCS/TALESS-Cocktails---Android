<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- when pressed again-->
    <item
        android:drawable="@drawable/radio_button_reselected"
        android:state_checked="true"
        android:state_pressed="true" />
    <!-- when pressed while another one is pressed
    <item
        android:drawable="@color/pastelRed"
        android:state_pressed="true" /> -->
    <!-- when is selected -->
    <item
        android:drawable="@drawable/radio_button_selected"
        android:state_checked="true" />
    <!-- the default, not pressed-->
    <item
        android:drawable="@drawable/radio_button_normal"/>
</selector>