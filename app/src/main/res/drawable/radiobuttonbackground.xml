<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- when pressed again -->
    <item
        android:drawable="@color/design_default_color_primary_variant"
        android:state_checked="true"
        android:state_pressed="true" />
    <!-- when pressed while another one is pressed-->
    <item
        android:drawable="@color/purple_200"
        android:state_pressed="true" />
    <!-- when is selected -->
    <item
        android:drawable="@color/design_default_color_primary"
        android:state_checked="true" />
    <!-- the default, not pressed-->
    <item
        android:drawable="@color/white"/>
</selector>