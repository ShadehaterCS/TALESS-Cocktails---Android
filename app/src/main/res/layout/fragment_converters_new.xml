<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/converters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.ConvertersFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/american_captain"
        android:text="Unit Converter"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/american_captain"
        android:gravity="center"
        android:hint='"2, ".5", "2/3", "1/8"'
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupFrom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/enter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/american_captain"
        android:text="Enter Here"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/input"
        app:layout_constraintEnd_toStartOf="@+id/input"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clear"
        android:layout_width="108dp"
        android:layout_height="61dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/american_captain"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/american_captain"
        android:text="To"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/from"
        app:layout_constraintTop_toBottomOf="@+id/from" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/american_captain"
        android:text="Results will be printed here"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to" />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/american_captain"
        android:text="From"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupFrom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/from"
        app:layout_constraintTop_toTopOf="@+id/from">

        <RadioButton
            android:id="@+id/fromgrRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radiobuttonbackground"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/grams" />

        <RadioButton
            android:id="@+id/frommlRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radiobuttonbackground"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/millilitres" />

        <RadioButton
            android:id="@+id/fromozRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radiobuttonbackground"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/ounces" />

        <RadioButton
            android:id="@+id/fromtspRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radiobuttonbackground"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/teaspoons" />

        <RadioButton
            android:id="@+id/fromtbspRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radiobuttonbackground"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/tablespoons" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupTo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/from"
        app:layout_constraintTop_toTopOf="@+id/to">

        <RadioButton
            android:id="@+id/togrRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/grams"
            android:background="@drawable/radiobuttonbackground"
            />

        <RadioButton
            android:id="@+id/tomlRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/millilitres"
            android:background="@drawable/radiobuttonbackground"
            />

        <RadioButton
            android:id="@+id/toozRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/ounces"
            android:background="@drawable/radiobuttonbackground"
            />

        <RadioButton
            android:id="@+id/totspRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/teaspoons"
            android:background="@drawable/radiobuttonbackground"
            />

        <RadioButton
            android:id="@+id/totbspRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/tablespoons"
            android:background="@drawable/radiobuttonbackground"
            />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>