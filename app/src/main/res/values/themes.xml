<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartCookie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cocktail_crimson</item>
        <item name="colorPrimaryVariant">@color/cocktail_rose</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pastelRed</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/kafetiblackopwsleeioantonis</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?android:textColorPrimaryInverse</item>

        <item name="cardViewStyle">@style/Theme.SmartCookie.CardviewStyle</item>
        <item name="android:textViewStyle">@style/Theme.TextViewStyle</item>
        <item name="snackbarTextViewStyle">@style/Theme.Snackbar</item>
    </style>

    <style name="Theme.SmartCookie.CardviewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Theme.TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Theme.Snackbar" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>